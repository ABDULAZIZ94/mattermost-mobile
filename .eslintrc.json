{
  "extends": [
    "plugin:mattermost/react",
    "plugin:wdio/recommended"
  ],
  "plugins": [
    "mattermost",
    "wdio"
  ],
  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.5"
    }
  },
  "env": {
    "jest": true,
    "mocha": true
  },
  "globals": {
    "__DEV__": true,
    "$": true,
    "$$": true,
    "browser": true,
    "driver": true
  },
  "rules": {
    "comma-dangle": 0,
    "global-require": 0,
    "react/display-name": [2, { "ignoreTranspilerName": false }],
    "react/jsx-filename-extension": [2, {"extensions": [".js"]}]
  },
  "overrides": [
    {
      "files": ["*.test.js", "*.test.jsx"],
      "env": {
        "jest": true
      }
    }
  ]
}
